# =========================
# Production Environment Variables for Mbarie FMS AI
# =========================

# Core
NODE_ENV=production
PORT=5000
DATABASE_URL="postgresql://postgres:your_password@localhost:5432/fms_ai?schema=public"

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=60d

# AI
OPENAI_API_KEY=your_openai_api_key_here

# Email / SMTP
SMTP_HOST=smtp.mbarieservicesltd.com
SMTP_PORT=587
SMTP_USER=your_email@mbarieservicesltd.com
SMTP_PASS=your_email_password_here
SMTP_FROM="Mbarie FMS AI <your_email@mbarieservicesltd.com>"

# Client/Server URLs
CLIENT_URL=https://your-frontend-domain.com
SERVER_URL=https://your-backend-domain.com

# File uploads
FILE_UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=25

# Agents / Controls
AGENT_ENABLED=true
AGENT_POLL_INTERVAL_MS=30000

# Logging / Feature flags
LOG_LEVEL=info
ENABLE_AI_ENDPOINTS=true

# Optional: Email approval/webhook
# APPROVAL_INBOX_ADDRESS=approvals@yourdomain.com
# APPROVAL_WEBHOOK_SECRET=your_long_random_string
